@model IEnumerable<Category> // import the category model to use with the table
@{
    ViewData["Title"] = "Index";
}

<h1>Index Category</h1>

<table class = "table table-bordered table-striped" style="width: 100%" >
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model) // the @ lets us insert C# code. iterate through the obj in the Category Model
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>